{
  "name": "vitaltrack-backend",
  "version": "1.0.0",
  "description": "VitalTrack backend API for senior living facility health monitoring",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/config/runMigrations.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["health", "monitoring", "senior-care", "iot"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "pg": "^8.11.0",
    "sequelize": "^6.32.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.9.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.14.0",
    "@sendgrid/mail": "^7.7.0",
    "firebase-admin": "^11.10.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/uuid": "^9.0.2",
    "@types/nodemailer": "^6.4.9",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
